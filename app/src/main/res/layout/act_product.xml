<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductAct">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productName"
        android:text="PRODUCT"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sanchez"
        android:textColor="@color/dendro"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="210dp"
        android:layout_below="@id/productName"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:id="@+id/aquaProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/aquaImg"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aqua" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="126dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="17dp"
                android:text="Aqua"
                android:textColor="@color/dendro"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="230dp"
        android:layout_below="@id/aquaProduct"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:id="@+id/vitProduct"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/vitImg"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/vit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="142dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:text="Vit"
                android:textColor="@color/dendro"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>